<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_mission">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CreateMissionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/btnBacktoHompagecreateMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:drawableLeft="@drawable/baseline_arrow_back_ios_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Profil"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previewImageView2"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/cameraButton"
                app:srcCompat="@drawable/ic_place_holder" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Nama:">

            </TextView>

            <EditText
                android:id="@+id/nama_QG"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Nama Anda"
                android:padding="8dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Email:"></TextView>

            <EditText
                android:id="@+id/lokasi_misi"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:padding="8dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Nomor Telepon:"></TextView>

            <EditText
                android:id="@+id/keterangaTambahanMisi"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Cth: 0812345678"
                android:padding="8dp"
                android:textColor="@color/black" />



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SimpanMission"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:backgroundTint="@color/green"
                android:text="Simpan"
                android:textSize="11sp"></Button>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/NavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/white"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <View
                android:id="@+id/HomePage"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/home"/>

            <View
                android:id="@+id/ExplorePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/social_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />
            <View
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/rounded_corner_map"/>

            <View
                android:id="@+id/MapPage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="191dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/maps_ic"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/MessagePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/chat_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/ProfilPage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="335dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/profil_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
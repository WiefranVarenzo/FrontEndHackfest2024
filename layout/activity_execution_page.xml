<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExecutionPage"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:elevation="100dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="1.5dp"
                android:layout_marginTop="45dp"
                android:background="#808080"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:drawableLeft="@drawable/baseline_arrow_back_ios_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Create Mission"
                android:textAlignment="center"
                android:textColor="#003B2B"
                android:textStyle="bold"
                android:textSize="20sp"
                android:font="@font/poppinsextrabold"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1 Picture added"
            android:textColor="#003B2B"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:font="@font/poppinsextrabold">
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:layout_marginTop="46dp"
        android:orientation="horizontal">
        <View
            android:layout_width="310dp"
            android:layout_height="390dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/rounded_corner3"/>
        <ImageView
            android:layout_width="320dp"
            android:layout_height="410dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/garbage_img"/>
        <View
            android:layout_width="305dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="490dp"
            android:background="@drawable/rounded_corner2"
            android:backgroundTint="#F3F4F6"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="#D9D9D9"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="104.5dp"
            android:layout_marginTop="518dp"
            android:background="@drawable/add"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="#007F5C"
            android:text="Execute"
            android:textSize="18dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="650dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="1.5dp"
            android:layout_marginTop="0dp"
            android:background="#808080"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="97dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="174dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff"
            tools:ignore="SpeakableTextPresentCheck"></Button>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/home"/>
        <View
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/social_btn"/>
        <View
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="1.5dp"
            android:background="@drawable/rounded_corner_map"/>
        <View
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="191dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/maps_ic"/>
        <View
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/chat_btn"/>
        <View
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/profil_btn"/>
    </RelativeLayout>

</RelativeLayout>
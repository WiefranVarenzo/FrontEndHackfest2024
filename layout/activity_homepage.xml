<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:elevation="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <View
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="45dp"
                    android:background="#808080"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#003B2B"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:font="@font/poppinsextrabold"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:font="@font/poppinsextrabold"
                    android:text="Find ur Mission!"
                    android:textColor="#003B2B"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </TextView>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="#ffffff"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="#ffffff"/>
            <Button
                android:id="@+id/sellgarbage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="278dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="#ffffff"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corner2"
                android:clickable="true"
                android:elevation="10dp"
                android:orientation="horizontal"
                tools:ignore="SpeakableTextPresentCheck"></TextView>
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="170dp"
                android:elevation="10dp"
                android:background="@drawable/rounded_corner2"
                android:orientation="horizontal"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="12dp"
                android:clickable="true">
            </TextView>
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="170dp"
                android:elevation="10dp"
                android:background="@drawable/rounded_corner2"
                android:orientation="horizontal"
                android:layout_marginStart="280dp"
                android:layout_marginEnd="12dp"
                android:clickable="true">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="115dp"
                android:scaleX="0.35"
                android:scaleY="0.35"
                android:elevation="10dp"
                android:clickable="true"
                android:drawableLeft="@drawable/search"
                android:layout_marginStart="-45dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/findmission"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="115dp"
                android:scaleX="0.35"
                android:scaleY="0.35"
                android:elevation="10dp"
                android:drawableLeft="@drawable/create"
                android:id="@+id/createmission"
                android:layout_marginStart="106dp"
                android:clickable="true"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="115dp"
                android:scaleX="0.35"
                android:scaleY="0.35"
                android:elevation="10dp"
                android:drawableLeft="@drawable/dollar"
                android:layout_marginStart="253dp"
                android:clickable="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/btnsellgarbage"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="235dp"
                android:text="Find a Mission"
                android:textColor="#003B2B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="235dp"
                android:text="Create Mission"
                android:textColor="#003B2B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="235dp"
                android:text="Sell a Garbage"
                android:textColor="#003B2B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="270dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-325dp"
                android:layout_marginBottom="-200dp"
                android:scaleX="0.287"
                android:scaleY="0.25"
                android:elevation="10dp"
                android:drawableLeft="@drawable/mp_maps"
                android:layout_marginStart="-715dp"
                android:layout_marginEnd="-900dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:font="@font/poppinsextrabold"
                    android:text="Updated News!"
                    android:textColor="#003B2B"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="1dp"
                android:elevation="10dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-250dp"
                android:layout_marginBottom="-200dp"
                android:scaleX="0.260"
                android:scaleY="0.25"
                android:elevation="10dp"
                android:drawableLeft="@drawable/news_mp"
                android:layout_marginStart="-716dp"
                android:layout_marginEnd="-900dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="130dp"
                android:text="Sampah Organik Mendominasi Jumlah Sampah Harian di TPA Benowo Surabaya"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="160.5dp"
                android:text="liputan6.com - 10 Jan 2024, 21:20 "
                android:textColor="#565656"
                android:textStyle="bold"
                android:textSize="8sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="1dp"
                android:elevation="10dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-300dp"
                android:layout_marginBottom="-220dp"
                android:scaleX="0.298"
                android:scaleY="0.19"
                android:elevation="10dp"
                android:drawableLeft="@drawable/sampahtumpukan3"
                android:layout_marginStart="-680dp"

                android:layout_marginEnd="-900dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="130dp"
                android:text="Sampah Organik Mendominasi Jumlah Sampah Harian di TPA Benowo Surabaya"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginTop="160.5dp"
                android:text="liputan6.com - 10 Jan 2024, 21:20 "
                android:textColor="#565656"
                android:textStyle="bold"
                android:textSize="8sp"
                android:font="@font/poppinsextrabold"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="12dp"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/NavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/white"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <View
                android:id="@+id/HomePage"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/home"/>

            <View
                android:id="@+id/ExplorePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/social_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />
            <View
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/rounded_corner_map"/>

            <View
                android:id="@+id/MapPage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="191dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/maps_ic"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/MessagePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/chat_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/ProfilPage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="335dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/profil_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

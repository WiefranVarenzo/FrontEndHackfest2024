<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_mission">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CreateMissionActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <TextView
                    android:id="@+id/btnBacktoHompagecreateMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:drawableLeft="@drawable/baseline_arrow_back_ios_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Create Mission"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previewImageView2"
                android:layout_width="172dp"
                android:layout_height="146dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/baseline_image_24"
                app:layout_constraintBottom_toTopOf="@+id/cameraButton"
                app:srcCompat="@drawable/ic_place_holder" />

            <androidx.cardview.widget.CardView
                android:layout_width="230dp"
                android:layout_height="170dp">


                <EditText
                    android:id="@+id/berikanKomentar"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Berikan Komentar"
                    android:inputType="textMultiLine"
                    android:minHeight="48dp"
                    android:background="@android:color/transparent"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Nama:">

            </TextView>

            <EditText
                android:id="@+id/nama_QG"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Nama Anda"
                android:padding="8dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Lokasi:"></TextView>

            <EditText
                android:id="@+id/lokasi_misi"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:padding="8dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Keterangan Tambahan:"></TextView>

            <EditText
                android:id="@+id/keterangaTambahanMisi"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:hint="Cth: Jl.Pinggir Jurang"
                android:padding="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Quantity:"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/KuntitasKecil"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/green"
                android:text="Kecil"
                android:textSize="11sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/KuantitasSedang"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/green"
                android:text="Sedang"
                android:textSize="11sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/KuantitasBesar"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/green"
                android:text="Besar"
                android:textSize="11sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Appreciation Fee:"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/login_button10rb"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@color/green"
                    android:text="Rp10.000"
                    android:textSize="11sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/login_button20rb"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/green"
                    android:text="Rp20.000"
                    android:textSize="11sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/login_button30rb"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/green"
                    android:text="Rp30.000"
                    android:textSize="11sp"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SimpanMission"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:backgroundTint="@color/green"
                android:text="Simpan"
                android:textSize="11sp"></Button>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/NavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/white"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <View
                android:id="@+id/HomePage"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/home"/>

            <View
                android:id="@+id/ExplorePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/social_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />
            <View
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/rounded_corner_map"/>

            <View
                android:id="@+id/MapPage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="191dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/maps_ic"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/MessagePage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/chat_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/ProfilPage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="335dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/profil_btn"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
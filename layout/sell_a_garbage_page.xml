            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/home"/>
        <View
            android:id="@+id/ExplorePage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/social_btn"/>
        <View

            android:layout_width="85dp"
            android:clickable="true"
            android:layout_height="100dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="1.5dp"
            android:background="@drawable/rounded_corner_map"/>
        <View
            android:id="@+id/MapPage"
            android:layout_width="45dp"
            android:clickable="true"
            android:layout_height="45dp"
            android:layout_marginStart="191dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/maps_ic"/>
        <View
            android:id="@+id/MessagePage"
            android:layout_width="55dp"
            android:clickable="true"
            android:layout_height="55dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/chat_btn"/>
        <View
            android:id="@+id/ProfilPage"
            android:layout_width="55dp"
